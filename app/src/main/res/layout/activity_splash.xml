<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="nacoda.com.bootcampghifari.SplashActivity">

    <ImageView
        android:id="@+id/ivSplash"
        android:layout_width="@dimen/dimen_splash"
        android:layout_height="@dimen/dimen_splash"
        android:layout_centerInParent="true"
        android:src="@drawable/wisata" />

    <TextView
        android:id="@+id/tvSplash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ivSplash"
        android:layout_centerHorizontal="true"
        android:text="@string/wisata"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/text_size_64sp" />

    <ProgressBar
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@id/tvSplash"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
